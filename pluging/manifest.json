{
  "manifest_version": 3,
  "name": "1688产品导入助手",
  "version": "1.0.0",
  "description": "从1688网站导入产品信息到Vehicle Supplies网站",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation",
    "windows"
  ],
  "host_permissions": [
    "https://*.1688.com/*",
    "https://detail.1688.com/*",
    "https://cbu01.alicdn.com/*",
    "https://sc04.alicdn.com/*",
    "http://localhost:3000/*",
    "https://your-domain.com/*"
  ],
  "externally_connectable": {
    "matches": ["https://*.1688.com/*"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "导入1688产品",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://detail.1688.com/*", "https://*.1688.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "https://detail.1688.com/*"
      ]
    },
    {
      "resources": [
        "preview-window.html",
        "preview-window.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}