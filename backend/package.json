{
  "name": "vehicle-supplies-website-backend",
  "version": "1.0.0",
  "description": "汽车用品电商网站后端",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --signal SIGTERM --inspect=9229 server.js --delay 2s",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "migrate": "node db/migrate.js",
    "migrate:prod": "cross-env NODE_ENV=production node db/migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk=9230 node_modules/jest/bin/jest.js --runInBand --no-cache",
    "test:debug:watch": "node --inspect-brk=9230 node_modules/jest/bin/jest.js --runInBand --no-cache --watch",
    "test:single": "jest --testNamePattern",
    "test:file": "jest --testPathPattern",
    "test:env": "node scripts/test-env.js",
    "test:env:prod": "cross-env NODE_ENV=production node scripts/test-env.js",
    "schedule": "node schedule.js",
    "schedule:dev": "nodemon --signal SIGTERM --inspect=9231 schedule.js --delay 2s",
    "schedule:prod": "cross-env NODE_ENV=production node schedule.js",
    "clean-media": "node tools/cleanUnusedMedia.js",
    "clean-media:prod": "cross-env NODE_ENV=production node tools/cleanUnusedMedia.js"
  },
  "dependencies": {
    "@paypal/paypal-server-sdk": "^1.1.0",
    "alipay-sdk": "^4.14.0",
    "apple-signin-auth": "^2.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "braintree": "^3.30.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "google-auth-library": "^10.1.0",
    "https-proxy-agent": "^7.0.6",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.3",
    "passport-facebook": "^3.0.0",
    "pg": "^8.11.3",
    "proxy-from-env": "^1.1.0",
    "qrcode": "^1.5.4",
    "stripe": "^14.14.0",
    "svg-captcha": "^1.4.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^7.1.4"
  }
}
